<div class="form-group">
  <%= form_with(model: [@single_room ,Message], remote: true, class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } ) do |f| %>
    <%= f.text_field :content, class: 'form-control', autocomplete: 'off' %>
    <%= f.hidden_field :room_id, value: @single_room.id %>
    <%= f.submit "send message",data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>
