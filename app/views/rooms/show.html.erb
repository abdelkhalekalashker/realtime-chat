<div id="chatroom_container" class="row bg-dark text-light">
    <div id="side_panel" class="col-md-4 col-sm-4">
      <h5 align="center"> <%= current_user.email %> </h5>
    </div>
    <div id="room_container"
    class="col-md-8 col-sm-8 bg-dark text-light">
      <% if @room %>
        <div id="single_room">
            <h4 class="text-center"> <%= @user&.email || @room.name %> </h4>
          <%= turbo_stream_from @single_room %>
          <div id="messages">
            <%= render @room.messages %>
          </div>
          <% if  current_user.has_joined(@room) %>
            <%= render 'layouts/new_message_form' %>
          <% else %>
            <%= button_to "join", join_room_path(@room) , class:'form-control me-2' ,method: :post  %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
